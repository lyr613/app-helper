{
    "name": "writer-electron",
    "version": "0.0.4",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "watch": " npx webpack --mode development --watch ",
        "electron-start": " node ./scripts/electron-start.js ",
        "preelectron-build": " npx webpack --mode production ",
        "electron-build": " npx electron-builder ",
        "prerelease": " npx webpack --mode production ",
        "release": " node ./scripts/publish.js "
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/fs-extra": "^8.0.1",
        "@types/uuid": "^3.4.6",
        "fs-extra": "^8.1.0",
        "typescript": "^3.7.4",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^3.0.0",
        "directory-named-webpack-plugin": "^4.0.1",
        "electron": "7.1.7",
        "electron-builder": "^21.2.0",
        "electron-updater": "^4.2.0",
        "ts-loader": "^6.2.1",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    },
    "repository": "https://github.com/lyr613/project-helper",
    "publish": [
        "github"
    ],
    "build": {
        "productName": "soft-app-helper",
        "appId": "org.simulatedgreg.apphelper",
        "directories": {
            "output": "build-final"
        },
        "files": [
            "./*",
            "./build/**",
            "./build-page/**"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "shortcutName": "app-help"
        },
        "win": {
            "artifactName": "${productName}_setup_${version}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        }
    }
}
